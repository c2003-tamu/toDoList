<!DOCTYPE html>
<html>
<head>
    <title>To-Do List</title>
</head>
<body>
    <h1>To-Do List</h1>
    <ul>
        <% tasks.forEach(task => { %>
            <li>
                <%= task.title %>
                <form method="POST" action="/tasks/<%= task.id %>?_method=DELETE">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
    <a href="/add">Add Task</a>
</body>
</html>

